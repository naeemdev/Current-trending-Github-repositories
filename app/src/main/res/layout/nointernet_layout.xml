<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_nointernet"
    android:gravity="center"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_nointentnet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:src="@mipmap/nointernet_connection" />

    <TextView
        android:id="@+id/tv_somthingwentwrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_nointentnet"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/somthingwentwrong"
        android:textColor="@color/color_someting"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_somthingwentwrong"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/analain_msg"
        android:textColor="@color/gray"
        android:textSize="@dimen/_15ssp" />

    <Button
        android:layout_width="@dimen/_328sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/green_border_bg"
        android:text="@string/retry"
        android:layout_marginBottom="@dimen/_16sdp"
        android:onClick="onRettyclick"
        android:textColor="@color/green"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="bold" />

</RelativeLayout>